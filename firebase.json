{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": [ {
    "site": "odd-chatter",
    "target": "release",
    "public": "./release",
    "ignore": [
      "release/scripts/src"
    ],
    "headers": [ {
      "source" : "**/*.@(js|css|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }, {
      "source" : "**/*.@(js)",
      "headers" : [ {
        "key"  : "SourceMap",
        "value" : "/scripts/main.js.map"
      } ]
    } ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }, {
    "site": "odd-chatter-dev",
    "target": "dev",
    "public": "./public",
    "headers": [{
      "source" : "**/*.@(js|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }, {
      "source" : "**/*.@(js)",
      "headers" : [ {
        "key"  : "SourceMap",
        "value" : "/scripts/main.js.map"
      } ]
    } ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm run build"
    ]
  } , {
    "site": "odd-chatter-admin",
    "target": "admin",
    "public": "./admin",
    "ignore": [
      "admin/scripts/src"
    ],
    "headers": [ {
      "source" : "**/*.@(js|css|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }, {
      "source" : "**/*.@(js)",
      "headers" : [ {
        "key"  : "SourceMap",
        "value" : "/scripts/admin.js.map"
      } ]
    } ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm run build-admin"
    ]
  } ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
